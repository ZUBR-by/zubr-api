pipeline {
  agent any
  options {
    disableConcurrentBuilds()
  }
  stages {
    stage('Build') {
        agent {
            dockerfile {
                filename 'infrastructure/php/gitlab/Dockerfile'
            }
        }
        steps {
            sh 'composer install -a --no-dev --no-interaction'
        }
    }
    stage('Deploy') {
        agent {
            docker { image 'kissmy/ansistrano:latest'}
        }
        steps {
            sh 'ls -l'
        }
    }
  }
}

